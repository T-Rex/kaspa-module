{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "*": ["./types/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true
  }
}
