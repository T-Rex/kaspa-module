{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "module": "ES6",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["types", "node_modules/@types"],
    "paths": {
      "*": ["./types/*"]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true
  }
}
